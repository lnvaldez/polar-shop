extends ../layouts/main

block append head 
    link(rel="stylesheet", href="/css/product-detail.css")

block content
    .container
        .header
            h1 Add Product
        
        form.add-product-form(action='/products' method="POST")
            .form-group
                label(for="name") Product Name:
                input#name(type="text" name="name" required)

            .form-group
                label(for="name") Description:
                input#name(type="text" name="description" required)
            
            .form-group
                label(for="category") Category:
                select#category(name="category" required)
                    option(value="") Select a category
                    option(value="Fashion & Accessories") Fashion & Accessories
                    option(value="Technology & Gadgets") Technology & Gadgets
                    option(value="Outdoor & Sports Equipment") Outdoor & Sports Equipment
                    option(value="Home & Lifestyle") Home & Lifestyle
                    option(value="Food & Beverages") Food & Beverages
                    option(value="Grooming & Personal Care") Grooming & Personal Care
                    option(value="Entertainment") Entertainment
                    
            .form-group
                label(for="price") Price:
                input#price(type="number" name="price" step="0.01" required)
            
            .form-group
                label(for="quantity") Quantity:
                input#quantity(type="number" name="quantity" required)

            .form-group 
                label(for="image") Image: 
                input#image(type="text" name="image" required)

            .form-actions
                button.save-btn(type="submit") Add Product
                a.cancel-btn(href="/admin/products") Cancel  